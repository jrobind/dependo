{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "strict": true,
    "module": "esnext",
    "lib": ["ES2019"],
    "noEmit": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "__mocks__/**/*", "__tests__/**/*"],
  "exclude": ["node_modules/**/*", "build/**/*"]
}
